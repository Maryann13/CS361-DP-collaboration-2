<Window x:Class="Interface.Variables"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="Variables" Height="250" Width="200" Background="#FF08BF96" Closing="Window_Closing">
    <Grid>
        <StackPanel Margin="10">
            <ScrollViewer x:Name="scroll" VerticalScrollBarVisibility="Auto" Height="130">
                <ListBox x:Name="variables"></ListBox>
            </ScrollViewer>
            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Width="160">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBox x:Name="new_var" Width="70"></TextBox>
                    <Button Content="Add" Width="40" Click="Add_Click"></Button>
                    <Button Content="Del" Width="40"  Click="Del_Click"></Button>
                </StackPanel>
                <Button Content="Clear" Margin="5" Click="Clear_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
